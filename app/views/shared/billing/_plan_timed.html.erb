<div class="inset has-description">
    <h4 class="group-header">Your Plan</h4>
    <div class="control-group">
        <table class="table table-striped" style="margin-bottom: 0;">
            <tr>
                <td>Prepaid</td>
                <td>
                    <% if @user.timed_plan_expired? %>
                        <span class="danger">Expired</span>
                    <% else %>
                        Expires: <%= @user.expires_at.to_formatted_s(:date) %>
                    <% end %>
                </td>
            </tr>
        </table>
    </div>
    <p class="control-group-description">You can purchase more time using Feedbin Notifier.</p>
</div>

<%= render partial: 'shared/billing/billing_subscribe', locals: {subscribe_title: "Switch to Subscription"} %>

<%= render partial: 'shared/billing/payment_history' %>

<%= render partial: 'shared/billing/receipt_info' %>
